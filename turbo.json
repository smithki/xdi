{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".melodist/**"]
    },

    "dev": {
      "cache": false
    },

    "start": {
      "cache": false
    },

    "clean": {
      "cache": false
    }
  },
  "globalDependencies": ["$NODE_ENV"]
}
