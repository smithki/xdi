{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".melodist/**"],
      "inputs": ["src/**"]
    },

    "dev": {
      "cache": false
    },

    "start": {
      "cache": false
    },

    "clean": {
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV"]
}
