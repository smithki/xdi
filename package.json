{
  "name": "xdi-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/@xdi/*",
    "packages/xdi",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "example:server": "ts-node --project ./examples/server/tsconfig.json ./examples/server/index.ts ",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "run-s --silent --print-label clean:*",
    "clean:workspaces": "turbo run clean",
    "clean:node_modules": "rimraf **/node_modules",
    "prepare": "husky install",
    "commit": "cz",
    "commit:retry": "cz --retry"
  },
  "devDependencies": {
    "@ikscodes/eslint-config": "~8.2.1",
    "@ikscodes/prettier-config": "~2.2.0",
    "@types/node": "17.0.12",
    "commitizen": "~4.2.5",
    "cz-conventional-changelog": "~3.3.0",
    "eslint": "~8.46.0",
    "eslint-config-turbo": "~1.10.12",
    "eslint-plugin-unused-imports": "~2.0.0",
    "husky": "~7.0.4",
    "lerna": "~7.1.4",
    "lint-staged": "~12.5.0",
    "melodist": "~0.11.0",
    "npm-run-all": "~4.1.5",
    "prettier": "~2.8.8",
    "rimraf": "~3.0.2",
    "ts-node": "~10.9.1",
    "tsconfig-paths": "~4.1.0",
    "turbo": "1.10.12"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "npm@8.12.1"
}
